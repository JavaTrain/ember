<input type="file" class="upload" {{action "readFile" on="change"}} />

{{#if isShowingModalFileUpload}}
    {{#modal-window close="toggleModal" toggleModal=(action "toggleModal") size="md" header="Upload this file?"}}
        <div class="modal-footer row">
            <div class="text-center">
                <img src="" class="preview" style="max-width: 400px; max-height: 400px">
            </div>

            <button  class="btn btn-upload" {{action 'upload' message}}>Upload</button>
            <button type="button" class="btn btn-default" data-dismiss="modal" {{action 'toggleModal'}}>Close</button>
        </div>
    {{/modal-window}}
{{/if}}
{{yield}}
