<input type="file" class="upload" />

{{#if isShowingModal}}
    {{#modal-window close="toggleModal" toggleModal=(action "toggleModal" bubbles=false) size="md" header="Are you sure to delete the file?"}}
        <div class="modal-footer">
            <div><img src="" class="preview" ></div>
            <button  class="btn btn-upload" {{action 'upl' message bubbles=false}}>Upload</button>

            <button type="button" class="btn btn-default" data-dismiss="modal" {{action 'toggleModal' bubbles=false}}>Close</button>
        </div>
    {{/modal-window}}
{{/if}}
{{yield}}
