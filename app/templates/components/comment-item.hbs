{{#if comments}}
    <h3>Comments: {{comments.length}}</h3>
    ***********************************************
    {{#each comments as |comment|}}
        <p>{{{comment.comment}}}</p>
        <button {{action 'deleteComment' comment}}>Delete {{comment.id}}</button>
        <button {{action 'editComment' comment}}>Edit</button>

        {{# if (eq comment.id editComment)}}
            <h2>Edit a comment</h2>
            <div class="form-group">
                <div class="col-sm-10">
                    {{ember-cli-ckeditor
                    value=comment.comment
                    ckeditorConfig=ckeditorConfig
                    externalPlugins=externalCkeditorPlugins
                    }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default" {{action 'updateComment' comment}}>Update comment</button>
                </div>
            </div>
        {{/if}}
        <hr />
    {{/each}}
{{/if}}
<div>
    <h2>Write a comment</h2>
    <div class="form-group">
        <div class="col-sm-10">
            {{ember-cli-ckeditor
            value=commentMsg
            ckeditorConfig=ckeditorConfig
            externalPlugins=externalCkeditorPlugins
            }}
        </div>
    </div>
</div>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default" {{action 'saveComment' commentMsg message}}>Post comment</button>
    </div>
</div>
{{yield}}
