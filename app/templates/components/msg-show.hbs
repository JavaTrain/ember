<h1>{{message.title}}</h1>
<p>{{{message.content}}}</p>

{{#if message.files}}
    {{#each message.files as |file|}}
        {{#file-show file=file}}{{/file-show}}
    {{/each}}
{{/if}}

<div>
    <span {{action 'likeMessage'}}>Likes: {{message.likes.length}}</span>
</div>

{{#file-upload message=message}}{{/file-upload}}

<div>
    {{comment-item comments=message.comments message=message}}
</div>


{{#if isShowingModal}}
    {{#modal-window close="toggleModal" toggleModal=(action "toggleModal") size="md" header="Are you sure to delete the post?"}}
        <div class="modal-footer">
            <button {{action 'submitModal'}} data-dismiss="modal" class="btn btn-primary">Ok</button>
            <button type="button" class="btn btn-default" data-dismiss="modal" {{action 'toggleModal'}}>Close</button>
        </div>
    {{/modal-window}}
{{/if}}

{{yield}}
