<div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">Title</label>
        <div class="col-sm-10">
            {{input type="text" value=item.title class="form-control" placeholder="The message title"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Message</label>
        <div class="col-sm-10">
            {{ember-cli-ckeditor
            value=item.content
            ckeditorConfig=ckeditorConfig
            externalPlugins=externalCkeditorPlugins
            }}
        </div>
    </div>

    {{# if item.files}}
        {{#each item.files as |file|}}
            {{file-show file=file}}
        {{/each}}
    {{/if}}

    <div class="row">
        {{file-upload message=item}}
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action 'buttonClicked' item}} disabled={{unless item.isValid true}}>{{buttonLabel}}</button>
        </div>
    </div>
</div>

{{yield}}
